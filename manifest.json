{
    "manifest_version": 2,
    "name": "Mail Checker",
    "version": "1.0",
    "description": "Check email statistics",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
  